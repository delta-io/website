---
/**
 * Container
 *
 * Creates a centered "container" which will contain your HTML. This container
 * is responsive and will adjust depending on the screen size.
 */
---

<div class="container px-4 w-full mx-auto">
  <slot />
</div>
<style>
  @media (min-width: 576px) {
    .container {
      width: calc(576px - 32px);
    }
  }

  @media (min-width: 768px) {
    .container {
      width: calc(768px - 32px);
    }
  }

  @media (min-width: 992px) {
    .container {
      width: calc(992px - 32px);
    }
  }

  @media (min-width: 1200px) {
    .container {
      width: calc(1200px - 32px);
    }
  }
</style>
