---
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<button type="button" class={className}>
  <slot />
</button>
<style>
  @media not all and screen(lg) {
    button {
      display: flex;
      align-items: center;
      justify-items: center;
      line-height: 0;
      width: 44px;
      height: 44px;
      font-size: 24px; /* Icon size */
    }
  }
</style>
