---
import Grid from "delta-theme/components/Grid.astro";
import Section from "delta-theme/components/Section.astro";
import Typography from "delta-theme/components/Typography.astro";
import { Image } from "astro:assets";
import openIcon from "./assets/open.svg";
import simpleIcon from "./assets/simple.svg";
import uniformIcon from "./assets/delta-uniform-dark-bkgd.svg";
import productionIcon from "./assets/production.svg";
import agnosticIcon from "./assets/agnostic.svg";

const valueProps = [
  {
    image: openIcon,
    name: "Open",
    description: "Community driven, rapidly expanding integration ecosystem",
  },
  {
    image: simpleIcon,
    name: "Simple",
    description:
      "One format to unify your ETL, Data warehouse, ML in your lakehouse",
  },
  {
    image: uniformIcon,
    name: "UniForm",
    description: "A universal format for lakehouse interoperability",
  },
  {
    image: productionIcon,
    name: "Production Ready",
    description: "Battle tested in over 10,000+ production environments ​​",
  },
  {
    image: agnosticIcon,
    name: "Platform Agnostic",
    description: "Use with any query engine on any cloud, on-prem, or locally",
  },
];
---

<Section padding="xxl" className="section">
  <Grid columns={{ md: 2, lg: 5 }} className="grid">
    {
      valueProps.map(({ image, name, description }) => (
        <Typography variant="prose" className="value-prop">
          <Image
            src={image}
            alt={name}
            width={100}
            height={100}
            class="max-w-[35%] mx-auto block mb-[theme(spacing.sm)]"
            loading="lazy"
          />
          <h4>{name}</h4>
          <p>{description}</p>
        </Typography>
      ))
    }
  </Grid>
</Section>
<style>
  .section {
    color: white;
    background-color: theme(colors.primary);
  }

  .value-prop {
    align-items: center;
    text-align: center;
  }

  .value-prop h4 {
    font-weight: normal;
  }
</style>
