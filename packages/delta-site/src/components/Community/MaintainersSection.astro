    <Typography variant="prose">
      <p>
        Want to dive deeper into Delta Lake, please chat with any of our
        maintainers!
      </p>
      <p>
        For more information on how to contribute, please refer to the <a
          href="/resources/contributing-to-delta"
          >Delta Lake contribution guide</a
        >.
      </p>
    </Typography>
  </Fragment>
  <Typography variant="table" className="mx-auto max-w-screen-md">
    <thead>
      <tr>
        <th>Name</th>
        <th>Organization</th>
        <th>Focal Areas</th>
      </tr>
    </thead>
    <tbody>
      {
        maintainers.map((maintainer) => (
          <tr>
            <td>
              {maintainer.link ? (
                <a href={maintainer.link}>{maintainer.name}</a>
              ) : (
                maintainer.name
              )}
            </td>
            <td>{maintainer.organization}</td>
            <td class="max-w-[250px]">{maintainer.areas.join(", ")}</td>
          </tr>
        ))
      }
    </tbody>
  </Typography>
</Section>
