---
/*
 * Blog authors index page template
 *
 * Lists all of the blog authors.
 */
import { getCollection } from "astro:content";
import Section from "../../../lib/delta-theme/components/Section.astro";
import Typography from "../../../lib/delta-theme/components/Typography.astro";
import Layout from "../../layouts/Layout.astro";

const profiles = await getCollection("profiles");

// Sort alphabetically
profiles.sort((a, b) => a.data.name.localeCompare(b.data.name));
---

<Layout title="Profiles">
  <Section padding="xxl" title="Profiles">
    <Typography variant="ul">
      {
        profiles.map((profile) => (
          <li>
            <a href={`/profiles/${profile.id}`}>{profile.data.name}</a>
          </li>
        ))
      }
    </Typography>
  </Section>
</Layout>
