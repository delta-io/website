---
import { Image } from "astro:assets";
import { Section } from "astro-orbit/components";
import Button from "../../ui/Button.astro";
import Grid from "../../ui/Grid.astro";
import Typography from "../../ui/Typography.astro";
import heroDesktopImg from "./hero-desktop.png";
import heroMobileImg from "./hero-mobile.png";
import DeltaSharingLogo from "./delta-sharing-logo.svg";
---

<Section padding="none" className="py-xxxl bg-white">
  <div class="text-center">
    <Image
      src={DeltaSharingLogo}
      alt="Delta Sharing"
      class="sharing-logo"
      loading="eager"
    />
    <Typography variant="prose">
      <h3>An open standard for secure data sharing</h3>
      <p>
        Delta Sharing is the industry's first open protocol for secure data
        sharing, making it simple to share data with other organizations
        regardless of which computing platforms they use.
      </p>
      <Grid columns={["min-content", "min-content"]} className="button-row">
        <Button
          href="https://github.com/delta-io/delta-sharing"
          target="_blank"
          className="button-underline">Get started</Button
        >
        <Button
          href="https://databricks.com/blog/2021/05/26/introducing-delta-sharing-an-open-protocol-for-secure-data-sharing.html"
          variant="secondary"
          target="_blank"
          className="button-underline">Read more</Button
        >
      </Grid>
      <Grid columns={2} className="links-row">
        <Typography variant="p2" className="text-right">
          <a
            href="https://github.com/delta-io/delta-sharing"
            target="_blank"
            class="sharing-link no-underline hover:underline">GitHub</a
          >
        </Typography>
        <Typography variant="p2" className="text-left">
          <a
            href="https://github.com/delta-io/delta-sharing/releases"
            target="_blank"
            class="sharing-link no-underline hover:underline">Releases</a
          >
        </Typography>
      </Grid>
    </Typography>
  </div>
  <Image src={heroMobileImg} alt="" loading="lazy" class="img-mobile" />
  <Image src={heroDesktopImg} alt="" loading="eager" class="img-desktop" />
</Section>
<style>
  .sharing-logo {
    width: 200px;
    margin: 0 auto;
  }

  .button-row {
    justify-content: center;
    margin-bottom: var(--spacing-md);
  }

  /* Sharing links: black color, no underline by default, underline on hover */
  .links-row a.sharing-link {
    color: var(--color-text);
  }

  .img-mobile,
  .img-desktop {
    width: 100%;
    margin: 0 auto;
  }

  .img-mobile {
    max-width: 366px;
  }

  .img-desktop {
    display: none;
  }

  @media (min-width: 768px) {
    .sharing-logo {
      width: 300px;
    }

    .img-mobile {
      display: none;
    }

    .img-desktop {
      max-width: 989px;
      display: block;
    }
  }

  @media (min-width: 992px) {
    .sharing-logo {
      width: auto;
    }
  }
</style>
